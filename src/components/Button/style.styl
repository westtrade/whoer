.button
	line-height 10px
	padding 10px
	background-color #1C4C54
	border 1px solid #173745
	transition background-color .3s
	display inline-block
	text-transform uppercase
	color #fff
	font-weight bold
	border-radius 2px
	cursor pointer
	min-width 140px
	text-align center
	user-select none
	&:hover
		background-color #173745
		transition background-color .3s
